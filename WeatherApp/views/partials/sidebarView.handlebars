<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="css/sidebar.css">
  </head>

  <body>

{{#each this.locs}}

  {{#if this.current.isCurrentlySelected}}

  {{log "      selected city match with: " this.current.weatherTitle}}

    <div class="row justify-content-center">
        <div class="row" id="rightCard">
            <div class="card2">
              <div class="container">
                <div class="row" id="topRowDetailedWeather">
                  <h4 id="selectedCityCond">{{this.current.weatherTitle}}</h4>
                </div>
                <div class="row">

                <i class="fas fa-{{this.current.weatherIcon}} fa-4x"></i>

                </div>
              </div>
                    <div class="line my-2"></div>

                    <div class="row">
                        <p class="light-text">Current Temp</p>
                        <p class="ml-auto"  id="currentTempVal">{{this.current.currently}}</p>
                    </div>
                    <div class="row">
                        <p class="light-text">High</p>
                        <p class="ml-auto" id="highTempVal">{{this.current.max}}</p>
                    </div>
                    <div class="row">
                        <p class="light-text">Low</p>
                        <p class="ml-auto" id="lowTempVal">{{this.current.min}}</p>
                    </div>
                    <div class="row">
                        <p class="light-text">Wind</p>
                        <p class="ml-auto" id="windVal">{{this.current.wind}}</p>
                    </div>
                    <div class="row">
                        <p class="light-text">Humidity</p>
                        <p class="ml-auto" id="humidVal">{{this.current.humid}}</p>
                    </div>
                    <div class="row">
                        <p class="light-text">Visibility</p>
                        <p class="ml-auto" id="visVal">{{this.current.visib}}</p>
                    </div>

                    <div class="line my-2"></div>

                    <div class="row">
                      <div class="col center-block text-center">
                        <p class="light-text" id="weatherDescTitle">Description:</p>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col center-block text-center">
                        <p class="light-text" id="weatherDescriptionText">{{this.current.description}}</p>
                      </div>
                    </div>

            </div>
        </div>
    </div>

  {{/if}}
{{/each}}

  </body>
</html>
