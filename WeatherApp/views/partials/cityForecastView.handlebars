<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="css/cityForecast.css">

  </head>

  <body>


    <div class="d-flex flexRow forecast-row" id="city{{@index}}">

      <div class="p-2 flex-fill statusSection">

        <div class="row">
          <div class="col-12">
            <h3>{{this.current.weatherTitle}}</h3>
          </div>
        </div>

        <div class="row">

          <div class="col-5 cityTempDisplay">
            <div class="weather-date-location">
              <h4 class="display-3">{{this.current.currently}}°</h4>
            </div>
          </div>

          <div class="col-6 weatherIconSpace my-auto" id="">
            <i class="fas fa-{{this.current.weatherIcon}} fa-4x"></i>
          </div>

        </div>

      </div>

      {{#each forecast}}
      <div class="p-2 flex-fill my-auto dailyWeather">
        <div class="dailyWeatherBox text-center">
            <i class="fas fa-{{this.weatherIcon}} fa-2x"></i>
            <p class="mb-0"> {{this.niceDate}} </p> <i class="mdi mdi-weather-cloudy"></i>
            <p class="mb-0"> {{this.niceMax}}° </p>
        </div>
      </div>
      {{/each}}


    </div>



  </body>

  </html>
